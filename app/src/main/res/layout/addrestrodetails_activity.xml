<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Add your Restaurant Details"
                android:textSize="30dp"
                android:textStyle="bold"
                android:padding="20dp"
                android:textColor="#f15b5d" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/uploadimage"
                android:layout_marginTop="50dp"
                android:src="@drawable/resturant_image" />

            <ImageView
                android:id="@+id/imgView"
                android:visibility="gone"
                android:layout_below="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Restaurant Name"
                android:layout_marginTop="50dp"
                android:id="@+id/restroname"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Phone Number"
                android:layout_marginTop="10dp"
                android:id="@+id/phone"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Address"
                android:layout_marginTop="10dp"
                android:id="@+id/address"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="City"
                android:layout_marginTop="10dp"
                android:id="@+id/city"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Country"
                android:layout_marginTop="10dp"
                android:id="@+id/country"
                android:maxLength="10"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Pincode"
                android:layout_marginTop="10dp"
                android:id="@+id/pincode"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Delivery Time"
                android:layout_marginTop="10dp"
                android:id="@+id/deliverytime"
                android:background="@drawable/signin"
                android:textColor="@color/black"
                android:padding="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/signin"
                android:padding="20dp"/>

            <!-- CheckBox group for "Food items Available" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Variety Available"
                android:padding="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <!-- Add this LinearLayout for dynamically adding checkboxes -->
            <LinearLayout
                android:id="@+id/checkboxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Checkboxes will be dynamically added here -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Details"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:id="@+id/savedetails"
                android:gravity="center"
                android:background="@drawable/signin_button"
                android:textColor="@color/white"
                android:padding="10dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
